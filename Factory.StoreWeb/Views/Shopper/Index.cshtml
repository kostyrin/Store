<div data-ng-controller="shopperController" class="container">
    <div class="row">
        <div class="col-md-12">
            <strong class="error">{{ error }}</strong>
            <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary">Add New</a></p>
            <form name="addshopper" data-ng-show="addMode" style="width:600px;margin:0px auto;">
                <div class="form-group">
                    <label for="cid" class="col-sm-2 control-label">ID:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="cid" placeholder="please enter id" data-ng-model="newshopper.ShopperId" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="cname" class="col-sm-2 control-label">Name:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="cname" placeholder="please enter your name" data-ng-model="newshopper.ShopperName" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="address" class="col-sm-2 control-label">Address:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="address" placeholder="please enter your address" data-ng-model="newshopper.Address" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="city" class="col-sm-2 control-label">City:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="city" placeholder="please enter your city" data-ng-model="newshopper.City" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="country" class="col-sm-2 control-label">Country:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="country" placeholder="please enter your country" data-ng-model="newshopper.Country" required />
                    </div>
                </div>
                <div class="form-group">
                    <label for="age" class="col-sm-2 control-label">Age:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="age" placeholder="please enter your age" data-ng-model="newshopper.Age" required />
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <input type="submit" value="Add" data-ng-click="add()" data-ng-disabled="!addshopper.$valid" class="btn btn-primary" />
                        <input type="button" value="Cancel" data-ng-click="toggleAdd()" class="btn btn-primary" />
                    </div>
                </div>
                <br />
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <br />
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" style="width:800px">
                    <tr>
                        <th>#</th>
                        <td>FirstName</td>
                        <th>LastName</th>
                        <th>Address</th>
                        <th>City</th>
                        <th>PostalCode</th>
                        <th>Country</th>
                    </tr>
                    <tr data-ng-repeat="shopper in shoppers">
                        <td><strong data-ng-hide="shopper.editMode">{{ shopper.ShopperId }}</strong></td>
                        <td>
                            <p data-ng-hide="shopper.editMode">{{ shopper.Name }}</p>
                            <input data-ng-show="shopper.editMode" type="text" data-ng-model="shopper.ShopperName" />
                        </td>
                        <td>
                            <p data-ng-hide="shopper.editMode">{{ shopper.Address }}</p>
                            <input data-ng-show="shopper.editMode" type="text" data-ng-model="shopper.Address" />
                        </td>
                        <td>
                            <p data-ng-hide="shopper.editMode">{{ shopper.City }}</p>
                            <input data-ng-show="shopper.editMode" type="text" data-ng-model="shopper.City" />
                        </td>
                        <td>
                            <p data-ng-hide="shopper.editMode">{{ shopper.Country }}</p>
                            <input data-ng-show="shopper.editMode" type="text" data-ng-model="shopper.Country" />
                        </td>
                        <td>
                            <p data-ng-hide="shopper.editMode">{{ shopper.Age }}</p>
                            <input data-ng-show="shopper.editMode" type="text" data-ng-model="shopper.Age" />
                        </td>
                        <td>
                            <p data-ng-hide="shopper.editMode"><a data-ng-click="toggleEdit(shopper)" href="javascript:;">Edit</a> | <a data-ng-click="deleteshopper(shopper)" href="javascript:;">Delete</a></p>
                            <p data-ng-show="shopper.editMode"><a data-ng-click="save(shopper)" href="javascript:;">Save</a> | <a data-ng-click="toggleEdit(shopper)" href="javascript:;">Cancel</a></p>
                        </td>
                    </tr>
                </table>
                <hr />
            </div>
        </div>
    </div>
    <div id="mydiv" data-ng-show="loading">
        <img src="Images/ajax-loader.gif" class="ajax-loader" />
    </div>
</div>
