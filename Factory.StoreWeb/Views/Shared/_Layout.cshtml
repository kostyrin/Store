@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Factory</title>
    @Styles.Render("~/Content/css")
    @*@Styles.Render("~/Content/Theme")*@
    @Scripts.Render("~/bundles/modernizr")

</head>
    <body class="bootstrap-admin-with-small-navbar">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="row">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Factory", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="collapse navbar-collapse main-navbar-collapse">
                        <div class="collapse navbar-collapse bootstrap-admin-navbar-sm">
                            <ul class="nav navbar-nav navbar-right ">
                                <li>
                                    <a href="#">Reminders <i class="glyphicon glyphicon-bell"></i></a>
                                </li>
                                <li class="dropdown">
                                    <a href="#" class="dropdown-toggle" data-hover="dropdown">Settings <i class="glyphicon glyphicon-cog"></i></a>
                                </li>
                                @Html.Partial("_LoginPartial")
                            </ul>
                        </div>
                    </div><!-- /.navbar-collapse -->
                    @*<div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav navbar-right">
                                <li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                <li>@Html.Partial("_LoginPartial")</li>
                            </ul>
                        </div>*@
                </div>
            </div>
        </nav>
        <div class="container">
            <div class="row">
                @RenderBody()
            </div>
            <div class="row">
                <hr>
                <footer role="contentinfo">
                    <p>&copy;  @DateTime.Now.Year -  Positron (c)</p>
                </footer>
            </div>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>
