@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-left" }))
    {
        @Html.AntiForgeryToken()

        @*<li>
            @Html.ActionLink("Профиль", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>*@
        <li>
            <a href="@Url.Action("Index", "Manage")"><i class="fa fa-user fa-fw"></i> Профиль</a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-out fa-fw"></i> Выйти</a></li>
    }
}
else
{
    <ul class="dropdown-menu dropdown-user">
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
